<body>

<!-- Question UI -->
<div id="box">
    <h2>Do you love me? ðŸ’•</h2>
    <button id="no">No</button>
    <button id="yes">Yes ðŸ’—</button>
</div>

<!-- Love words container -->
<div id="ui" style="margin-top:50px; display:none;"></div>

<script>
    const noBtn = document.getElementById("no");
    const yesBtn = document.getElementById("yes");
    const box = document.getElementById("box");
    const ui = document.getElementById("ui");

    // No button behavior
    let clickCount = 0;
    noBtn.addEventListener("click", ()=>{
      clickCount++;
      if(clickCount==1){
        noBtn.style.transform="scale(0.5)";
        yesBtn.style.transform="scale(1.5)";
      } else if(clickCount==2){
        noBtn.style.transform="scale(0.5)";
        yesBtn.style.transform="scale(1.7)";
      } else if(clickCount==3){
        noBtn.style.display="none";
        yesBtn.style.transform="scale(2)";
      }
    });

    // Yes button triggers love words animation
    yesBtn.addEventListener("click", ()=>{
      box.style.display="none";      // Hide question UI
      ui.style.display = "block";    // Show love words container

      const N = 100; // number of floating "I love you"
      for (let i = 1; i <= N; i++) {
        const love = document.createElement('div');
        love.className = 'love';
        love.style.setProperty('--i', i);

        const h = document.createElement('div');
        h.className = 'love_horizontal';

        const v = document.createElement('div');
        v.className = 'love_vertical';

        const word = document.createElement('div');
        word.className = 'love_word';
        word.textContent = 'I love you';

        v.appendChild(word);
        h.appendChild(v);
        love.appendChild(h);
        ui.appendChild(love);
      }
    });
</script>
</body>
